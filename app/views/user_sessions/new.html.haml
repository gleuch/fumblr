%h1 Login

- form_for @user_session, :url => user_session_path do |f|
  = f.error_messages
  %fieldset
    = f.label :login
    = f.text_field :login
  %fieldset
    = f.label :password
    = f.password_field :password
  %fieldset
    = f.check_box :remember_me
    = f.label :remember_me
  %fieldset.buttons
    = f.submit "Login"